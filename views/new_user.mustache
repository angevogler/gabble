<!doctype html>
<html>
  <head>
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:400,700,700i,900" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Sacramento" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
    <title>New User</title>
  </head>

  <body>
    <header id="signup-header">
      <h1>gabble</h1>
      <a href="/users/login">Already have account? <span>Log In</span></a>
    </header>

    <section class="wrapper">
      <div class="signup-container">
        <h1>Join gabble Today.</h1>
        {{ #error }}
        <h2 class="error">There was an error with your registration</h2>
        {{ /error }}
        <form method="post" action="/users/new" class="signup-form">
          <input type="text" name="name" placeholder="Name" require>
          <input type="text" name="username" placeholder="Username" require>
          <input type="password" name="password" placeholder="Password" require>
          <input type="submit" value="Sign Up." id="signup-btn">
        </form>
      </div>
    <section>
  </body>
</html>
